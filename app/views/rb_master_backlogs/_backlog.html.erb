<div class="backlog">
  <div class="header">
    <%= render :partial => "menu", :locals => {:backlog => backlog} %>
    <%- if backlog[:sprint] %>
      <%= render :partial => "rb_sprints/sprint", :object => backlog[:sprint] %>
      <div class="velocity"> </div>
    <%- else %>
      <div class="label"><%=l(:rb_label_product_backlog).titleize %></div>
      <a class="add_new_story" href="#"><%= l(:rb_label_new_story) %></a>
    <%- end %>
  </div>
  <ul class="stories">
    <%= render :partial => "rb_stories/story", :collection => backlog[:stories] %>
  </ul>
</div>
